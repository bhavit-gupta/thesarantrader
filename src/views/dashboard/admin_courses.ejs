                                    <div>
                                        <label class="block text-sm font-semibold text-slate-700 mb-1">Price (â‚¹)</label>
                                        <input type="number" name="price" required min="0" placeholder="2999"
                                            class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-semibold text-slate-700 mb-1">Original Price
                                            (â‚¹)</label>
                                        <input type="number" name="originalPrice" required min="0" placeholder="5999"
                                            class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                    </div>
                                </div>

                                <div class="grid grid-cols-2 gap-4">
                                    <div class="relative">
                                        <label class="block text-sm font-semibold text-slate-700 mb-1">Icon
                                            Emoji</label>
                                        <input type="hidden" name="icon" id="icon-input" value="ðŸ“š">

                                        <!-- Dropdown Trigger -->
                                        <button type="button" id="icon-dropdown-trigger"
                                            onclick="toggleIconDropdown('add')"
                                            class="w-full px-4 py-3 text-left bg-white border border-slate-300 rounded-lg flex items-center justify-between hover:border-blue-500 focus:ring-2 focus:ring-blue-500 transition-all group">
                                            <div class="flex items-center gap-3">
                                                <div class="w-8 h-8 flex items-center justify-center">
                                                    <span id="selected-icon-display"
                                                        class="text-2xl leading-none">ðŸ“š</span>
                                                </div>
                                                <span id="selected-icon-label"
                                                    class="text-sm font-semibold text-slate-700">Books</span>
                                            </div>
                                            <i
                                                class="fa-solid fa-chevron-down text-slate-400 text-sm group-hover:text-blue-500 transition-colors"></i>
                                        </button>

                                        <!-- Dropdown Menu -->
                                        <div id="icon-dropdown-menu-add"
