                        </button>

                        <!-- Dropdown Menu -->
                        <div id="color-dropdown-menu-edit"
                            class="hidden absolute z-20 bottom-full mb-1 w-72 max-h-60 overflow-y-auto custom-scrollbar bg-white border border-slate-200 rounded-xl shadow-xl p-3 transform transition-all origin-bottom left-0 sm:left-auto">
                            <div class="grid grid-cols-2 gap-2">
                                <% colors.forEach(item=> { %>
                                    <button type="button"
                                        onclick="selectEditColor(this, '<%= item.value %>', '<%= item.label %>', '<%= item.bg %>', '<%= item.text %>')"
                                        data-color="<%= item.value %>" data-label="<%= item.label %>"
                                        data-bg="<%= item.bg %>" data-text="<%= item.text %>"
                                        class="edit-color-btn w-full flex items-center justify-start gap-2 px-2 py-2 rounded-lg border border-slate-100 hover:bg-slate-50 transition-all group/btn bg-white">
                                        <div
                                            class="w-8 h-8 rounded-full <%= item.bg %> <%= item.text %> flex items-center justify-center border border-slate-100">
                                            <div class="w-4 h-4 rounded-full bg-current"></div>
                                        </div>
                                        <span class="text-sm font-medium text-slate-700">
                                            <%= item.label %>
                                        </span>
                                    </button>
                                    <% }); %>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="pt-4 flex gap-3">
                    <button type="button" onclick="closeEditModal()"
                        class="flex-1 py-2.5 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 font-bold rounded-xl transition-colors">
                        Cancel
                    </button>
                    <button type="submit"
                        class="flex-1 py-2.5 px-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl shadow-lg shadow-blue-600/20 transition-all transform hover:-translate-y-0.5">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Pass Courses Data Safely -->
    <script>
        // Using encodeURIComponent to prevent syntax errors in IDE and handle special characters safely
        const rawCoursesData = "<%- encodeURIComponent(JSON.stringify(courses)) %>";
        window.allCourses = JSON.parse(decodeURIComponent(rawCoursesData));
    </script>


    <%- include('../partials/footer') %>

        <script src="/javascripts/main.js"></script>
        <script src="/javascripts/admin-icons.js"></script>
        <script src="/javascripts/admin.js"></script>
</body>

</html>