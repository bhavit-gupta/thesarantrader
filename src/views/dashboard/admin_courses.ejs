</head>

<body class="font-sans antialiased text-slate-600 bg-slate-50 min-h-screen flex flex-col">

    <!-- Admin Navbar -->
    <nav class="bg-white border-b border-slate-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <!-- Logo & Brand -->
                <div class="flex items-center gap-3">
                    <a href="/admin/dashboard" class="flex items-center gap-2 group">
                        <div
                            class="w-8 h-8 rounded-lg bg-slate-900 text-white flex items-center justify-center font-bold text-lg group-hover:scale-105 transition-transform">
                            A
                        </div>
                        <span class="text-xl font-bold text-slate-900 tracking-tight">Admin<span
                                class="text-blue-600">Panel</span></span>
                    </a>
                    <span class="h-6 w-px bg-slate-200 mx-2"></span>
                    <span class="text-sm font-medium text-slate-500">Course Management</span>
                </div>


                <!-- Right Side Actions -->
                <div class="flex items-center gap-4">
                    <a href="/admin/dashboard"
                        class="text-slate-500 hover:text-slate-700 font-medium text-sm transition-colors">
                        <i class="fa-solid fa-arrow-left mr-1"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow py-10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                <!-- Left Column: Add New Course Form -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 sticky top-24">
                        <div class="p-6 border-b border-slate-100">
                            <h2 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                                <i class="fa-solid fa-plus-circle text-blue-600"></i> Add New Course
                            </h2>
                        </div>
                        <div class="p-6">
                            <form action="/admin/courses/add" method="POST" class="space-y-4">
                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 mb-1">Course Title</label>
                                    <input type="text" name="title" required
                                        placeholder="e.g. Advanced Options Strategy"
                                        class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                </div>

                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 mb-1">Description</label>
                                    <textarea name="description" required rows="3"
                                        placeholder="Brief summary of the course..."
                                        class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"></textarea>
                                </div>

                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 mb-1">Live Class Link
                                        (Zoom/Meet)</label>
                                    <div class="relative">
                                        <div
                                            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <i class="fa-solid fa-link text-slate-400"></i>
                                        </div>
                                        <input type="url" name="liveLink" placeholder="https://zoom.us/j/..."
                                            class="w-full pl-10 pr-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                    </div>
                                    <p class="text-xs text-slate-400 mt-1">Leave empty if not applicable</p>
                                </div>

