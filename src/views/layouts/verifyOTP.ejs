        <!-- Simple Script for OTP Input Focus -->
        <script>
            // OTP Auto-Focus Logic
            const inputs = document.querySelectorAll('.otp-input');
            inputs.forEach((input, index) => {
                input.addEventListener('input', (e) => {
                    if (e.target.value.length === 1) {
                        if (index < inputs.length - 1) inputs[index + 1].focus();
                    }
                });
                input.addEventListener('keydown', (e) => {
                    if (e.key === 'Backspace' && e.target.value === '') {
                        if (index > 0) inputs[index - 1].focus();
                    }
                });
            });

            // Stage 1: Verify OTP
            function verifyOTP() {
                // Combine inputs to get the OTP
                let enteredOTP = '';
                inputs.forEach(input => enteredOTP += input.value);

                const errorMsg = document.getElementById('otp-error');

                // Simulate Verification - Let's say correct OTP is "1234"
                if (enteredOTP === "1234") {
                    // Success
                    errorMsg.classList.add('hidden');
                    document.getElementById('verify-btn').classList.add('hidden');
                    document.getElementById('password-section').classList.remove('hidden');
                    // Disable OTP inputs
                    inputs.forEach(input => input.disabled = true);
                } else {
                    // Failure
                    errorMsg.classList.remove('hidden');
                    // Shake animation effect could be added here
                    inputs.forEach(input => {
                        input.classList.add('border-red-500', 'bg-red-50');
                        input.value = ''; // Clear inputs
                    });
                    inputs[0].focus();

                    // Clear error styling after specific time or input
                    setTimeout(() => {
                        inputs.forEach(input => input.classList.remove('border-red-500', 'bg-red-50'));
                    }, 2000);
                }
            }

            // Resend OTP
